#include <ncurses.h>
#include <algorithm>
#include <string>

int main()
{
    initscr();
    noecho();
    cbreak();

    // get screen size
    int ymax, xmax;
    getmaxyx(stdscr, ymax, xmax);

    WINDOW* menuwin = newwin(7, xmax-12, ymax-10, 5);
    box(menuwin, 0, 0);
    refresh();
    wrefresh(menuwin);
    keypad(menuwin, true);

    // make a menu
    std::string choices[3] = {
        "Walk",
        "Jog",
        "Run"
    };
    int choice;
    int highlight = 0;

    while (true)
    {
        for (size_t i = 0; i < 3; i++)
        {
            if (i == highlight)
                wattron(menuwin, A_REVERSE);
            mvwprintw(menuwin, i+1, 1, "%d) %s", i, choices[i].c_str());
            wattroff(menuwin, A_REVERSE);
        }

        choice = wgetch(menuwin);

        switch (choice)
        {
            case KEY_UP:
                highlight--;
                break;
            case KEY_DOWN:
                highlight++;
                break;
            default:
                break;
        }

        highlight = std::clamp(highlight, 0, 2);

        if (choice == 10)
            break;
    }

    printw("You chose: %s", choices[highlight].c_str());

    getch();
    endwin();

    return 0;
}
